package ac1_poo_ex1;

import java.util.Scanner;

public class AppApolice {

	public static void main(String[] args) {
		Scanner input = new Scanner(System.in);
		Apolice apolice1 = new Apolice("Brasil", 32, 100);
		
		System.out.println("1) -----------------------------------\n" + apolice1.print());
		
		apolice1.calculaValorPremio();
		System.out.println("\nCom valor do prêmio atualizado com acréscimo:\n" + apolice1.print());
		
		System.out.println("\nDigite o nome da cidade: ");
		String cidade1 = input.nextLine();
		apolice1.calculaDescontoPremio(cidade1);
		System.out.println("\nCom valor do prêmio atualizado com desconto:\n" + apolice1.print() + "\n\n");
		
		
		Apolice apolice2 = new Apolice("Brasil", 18, 1000);

		System.out.println("2) -----------------------------------\n" + apolice2.print());
		
		apolice2.calculaValorPremio();
		System.out.println("\nCom valor do prêmio atualizado com acréscimo:\n" + apolice2.print());
		
		System.out.println("\nDigite o nome da cidade: ");
		String cidade2 = input.nextLine();
		apolice2.calculaDescontoPremio(cidade2);
		System.out.println("\nCom valor do prêmio atualizado com desconto:\n" + apolice2.print() + "\n\n");
		
		input.close();
	}

}
